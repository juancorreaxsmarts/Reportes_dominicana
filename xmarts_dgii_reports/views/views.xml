<odoo>

    <record id="view_account_inh_fields_dgii" model="ir.ui.view">
        <field name="name">view_account_inh_fields_dgii</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date']" position="after">
                <field name="itbis_to_cost" />
                <field name="itbis_to_cost_type" attrs="{'invisible':[('itbis_to_cost', '=', False)], 'required':[('itbis_to_cost', '=', True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_account_account_inh_fields_dgii" model="ir.ui.view">
        <field name="name">view_account_account_inh_fields_dgii</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="isr_retencion_type" />
            </xpath>
        </field>
    </record>

