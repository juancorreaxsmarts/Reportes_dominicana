    <record id="view_606_report_wizard" model="ir.ui.view">
        <field name="name">Informes DGII</field>
        <field name="model">report.dgii.wizard</field>
        <field name="arch" type="xml">
            <form string="Choose The Details">
                <group>
                    <group>
