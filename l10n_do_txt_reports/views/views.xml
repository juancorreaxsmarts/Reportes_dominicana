              <button string="Cerrar" special="cancel" type="object"
                class="oe_link" />
            </div>
          </footer>
        </form>
      </field>
    </record>

        <!-- ACCIONES -->

      <record id="607_txt_form" model="ir.actions.act_window">
          <field name="name">Reporte TXT 607</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">txt_report.607</field>
          <field name="view_mode">form</field>
          <field name="view_id" ref="607_txt_form_view"/>
          <field name="target">new</field>
      </record>

        <!-- MENUS -->
        <menuitem
            id="607_txt"
            name="607_txt"
            parent="txt_menu_report"
            action="607_txt_form"
        />

        <!-- 608 -->

        <record model="ir.ui.view" id="608_txt_form_view">
