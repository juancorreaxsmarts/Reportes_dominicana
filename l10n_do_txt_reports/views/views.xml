<odoo>
  <data>

    <menuitem id="txt_menu_report"
        name="Informes DGII TXT"
        parent="account.menu_finance_reports"
        sequence="500"/>

    		<record model="ir.ui.view" id="606_txt_form_view">
    			<field name="name">606.txt.form</field>
    			<field name="model">txt_report.606</field>
    			<field name="arch" type="xml">
    				<form string="Retenciones de IVA">
    					<group>
                <group>
    						<field name="date_from"/>
    						<field name="date_to"/>
              </group>
    						<field name = "file_data" filename = "file_name" readonly = "1"/>
    						<field name = "file_name" invisible="1"/>
    					</group>
    					<footer>
    						<div class="oe_left">

    							<button string="Generar TXT" name="action_generate_txt"
    								type="object"  class="oe_highlight"/>
    							<button string="Cerrar" special="cancel" type="object"
    								class="oe_link" />
    						</div>
    					</footer>
    				</form>
    			</field>
    		</record>

            <!-- ACCIONES -->

    	    <record id="606_txt_form" model="ir.actions.act_window">
    	        <field name="name">Reporte TXT 606</field>
    	        <field name="type">ir.actions.act_window</field>
    	        <field name="res_model">txt_report.606</field>
    	        <field name="view_mode">form</field>
    	        <field name="view_id" ref="606_txt_form_view"/>
    	        <field name="target">new</field>
    	    </record>
            <!-- MENUS -->
            <menuitem
                id="606_txt"
                name="606_txt"
                parent="txt_menu_report"
                action="606_txt_form"
            />


    <!-- 607 -->



